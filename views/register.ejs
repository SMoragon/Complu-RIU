<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!-- Import BootStrap css -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    <!-- Import our css Style -->
    <link rel="stylesheet" type="text/css" href="/styles/style.css" />
    <!-- Import BootStrap javascript -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.min.js"
        integrity="sha384-BBtl+eGJRgqQAUMxJ7pMwbEyER4l1g+O15P+16Ep7Q9Q+zqX6gSbd85u4mG4QzX+"
        crossorigin="anonymous"></script>
    <title>Viajes La Ciénaga - Nosotros</title>
    <link rel="icon" type="image/jpg" href="Images/favicon-shrek.jpg">
</head>

<body>
    <header>
        <!-- Include pieces of header -->
        <%- include ('pieces/header')%>
    </header>

    <main id="main">
        <!-- Register Form -->
        <div class="container">
            <form id="register-form" method="POST" action="/register">

                <!-- Name field -->
                <div class="form-group row">

                    <label for="user-name"
                        class="offset-md-1 col-md-4 offset-sm-2 offset-2 col-10 col-form-label reg_field">
                        Nombre: </label>

                    <div class="offset-md-0 col-md-6 offset-sm-1 col-sm-7 offset-1 col-10">

                        <input type="text" class="form-control form-control-sm reg_input"
                            name="user-name" id="user-name">
                    </div>
                </div>

                <!-- Surname field -->
                <div class="form-group row">

                    <label for="user-surname"
                        class="offset-md-1 col-md-4 offset-sm-2 offset-2 col-10 col-form-label reg_field">
                        Apellidos: </label>

                    <div class="offset-md-0 col-md-6 offset-sm-1 col-sm-7 offset-1 col-10">

                        <input type="text" class="form-control form-control-sm reg_input"
                            name="user-surname" id="user-surname">
                    </div>
                </div>

                <!-- mail field -->
                <div class="form-group row">

                    <label for="user-email"
                        class="offset-md-1 col-md-4 offset-sm-2 offset-2 col-10 col-form-label reg_field">
                        Correo electrónico: </label>

                    <div class="offset-md-0 col-md-6 offset-sm-1 col-sm-7 offset-1 col-10">

                        <input type="mail" class="form-control form-control-sm reg_input"
                            name="user-email" id="user-email">
                       <!-- <span class="popup-form-error text-danger" id="mail-error">El
                            email introducido no es correcto. El formato
                            debe
                            ser "abcde@fghi.jkl".</span> -->

                    </div>
                </div>

                <!-- password field -->
                <div class="form-group row">
                    <label for="user-password"
                        class="offset-md-1 col-md-4 offset-sm-2 offset-2 col-10 col-form-label reg_field">
                        Contraseña: </label>
                    <div class="offset-md-0 col-md-6 offset-sm-1 col-sm-7 offset-1 col-10">
                        <input type="password" class="form-control form-control-sm reg_input"
                            name="user-password" id="user-password">
                    </div>
                </div>

                <!-- password field agains to check users write the same password -->
                <div class="form-group row">
                    <label for="user-password-again"
                        class="offset-md-1 col-md-4 offset-sm-2 offset-2 col-10 col-form-label reg_field">
                        Vuelva a introducir la contraseña: </label>
                    <div class="offset-md-0 col-md-6 offset-sm-1 col-sm-7 offset-1 col-10">

                        <input type="password" class="form-control form-control-sm reg_input"
                            name="user-password-again" id="user-password-again">

                        <!-- <span class="popup-form-error text-danger" id="password-error">Las contraseñas no
                            coinciden.</span>

                        <span class="popup-form-error text-danger" id="empty-error">Todos
                            los campos deben estar rellenos.</span>-->
                    </div>
                </div>

                <!-- Faculty field -->
                <div class="form-group row">

                    <label for="user-faculty"
                        class="offset-md-1 col-md-4 offset-sm-2 offset-2 col-10 col-form-label reg_field">
                        Facultad: </label>

                    <div class="offset-md-0 col-md-6 offset-sm-1 col-sm-7 offset-1 col-10">

                        <input type="text" class="form-control form-control-sm reg_input"
                            name="user-faculty" id="user-faculty">
                    </div>
                </div>

                <!-- Course field -->
                <div class="form-group row">

                    <label for="user-course"
                        class="offset-md-1 col-md-4 offset-sm-2 offset-2 col-10 col-form-label reg_field">
                        Curso: </label>

                    <div class="offset-md-0 col-md-6 offset-sm-1 col-sm-7 offset-1 col-10">

                        <input type="number" min="1" max="6" class="form-control form-control-sm reg_input"
                            name="user-course" id="user-course">
                    </div>
                </div>

                <!-- Group field -->
                <div class="form-group row">

                    <label for="user-group"
                        class="offset-md-1 col-md-4 offset-sm-2 offset-2 col-10 col-form-label reg_field">
                        Grupo: </label>

                    <div class="offset-md-0 col-md-6 offset-sm-1 col-sm-7 offset-1 col-10">

                        <input type="text" class="form-control form-control-sm reg_input"
                            name="user-group" id="user-group">
                    </div>
                </div>

                <!-- Profile Picture field -->
                <div class="form-group row">

                    <label for="user-profile"
                        class="offset-md-1 col-md-4 offset-sm-2 offset-2 col-10 col-form-label reg_field">
                        Imagen de perfil: </label>

                    <div class="offset-md-0 col-md-6 offset-sm-1 col-sm-7 offset-1 col-10">

                        <input type="file" class="form-control form-control-sm reg_input"
                            name="user-profile" id="user-profile">
                    </div>
                </div>

                <div class="send_buttons_cont">
                    <!-- Submit form button -->
                    <input id="send_but" class="send_buttons" type="submit" value="ENVIAR"></input>
                    <!-- Close form button and redirect to the main page -->
                    <button class="send_buttons" type="button" onclick="closeAndRedirect('/')">
                        CERRAR</button>
                </div>

        </div>
    </main>

    <footer>
        <!-- Include pieces of footer -->
        <%- include ('pieces/footer')%>
    </footer>
</body>
<!-- Our JavaScripts validation -->
<script src="/scripts/registerValidation.js"></script>
<!-- A little JavaScripts that catch an submit event and validate on client, if the validation fails, then stop the submit -->
<script>
    document.getElementById('register-form').addEventListener('submit', function (event) {

        if (!validate()) {
            event.preventDefault();
        }
    });

</script>

</html>